    "version": "0.2.0",
    "configurations": [
                {
                    "name": "FastAPI",
                    "type": "python",
                    "request": "launch",
                    "module": "uvicorn",
                    "args": [
                        "workshop_demo_2:app",
                        "--reload",
                        "--host",
                        "0.0.0.0",
                        "--port",
                        "8000"
                    ],
                    "jinja": true,
                    "env": {
                        "PYTHONUNBUFFERED": "1"
                    },
                    "console": "integratedTerminal",
                    "cwd": "${workspaceFolder}"
                },
                {

        
            "name": "Launch Streamlit App",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "research-agent-main/agent.py"
            ],
            "console": "integratedTerminal"
        
    
},
     
        {
            "name": "Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--workers", "4",
                "--host", 
                "0.0.0.0",
                "--port",
                "8000",
                "--log-level",
                "debug"
            ],
            "jinja": true,
            "justMyCode": false,

            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        },
        {
            "name": "Docker: Python - Fastapi",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "fastapi"
            }
        }
    ]
}